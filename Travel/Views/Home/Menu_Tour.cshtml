<div class="main">
    <div style="max-width:1100px;margin: 0 auto;">
        @{ Html.RenderPartial("LeftMenu");}
        <div class="col-lg-9 col-md-9">
            @foreach (var item in Model.ListMenu)
            {
                if (item.TenMenu == ViewBag.Name)
                {
                    <h2 class="heading">@item.TenMenu</h2>
                    <h3 class="des" style="margin: 15px 0;color: #720101;padding-top: 10px;clear: both;line-height: 22px;text-align: justify;font-size: 15px;">
                        <p><span style="color:#000000">@Html.Raw(item.NoiDung)</span></p>
                    </h3>
                    <div class="tour-list">
                        <div class="main">
                            @{
                                foreach (var tour in Model.ListTour)
                                {
                                    foreach (var menu in Model.ListMenu)
                                    {
                                        if (menu.TenMenuCha == item.TenMenu && tour.TenMenu == menu.TenMenu)
                                        {
                                        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                                            <div class="tour-box">
                                                <div class="tour-img">
                                                    <a title=@tour.TenTour href=""><img src=@tour.Anh alt=""></a>
                                                </div>
                                                <div class="tour-info">
                                                    <h4><a title=@tour.TenTour href="http://localhost:53953/Home/DetailTour?id=@tour.idTour">@tour.TenTour</a></h4>
                                                    <div style="padding:0 5px;">
                                                        <span class="pull-left"><b>Phương tiện:</b></span><span class="pull-right">@tour.PhuongTien</span>
                                                        <div class="clearfix"></div>
                                                    </div>
                                                    <div style="padding:0 5px;">
                                                        <span class="pull-left"><b>Thời gian:</b></span><span class="pull-right"> @tour.ThoiGian</span>
                                                        <div class="clearfix"></div>
                                                    </div>
                                                    <div style="padding:0 5px;">
                                                        <span class="pull-left"><b>Ngày khởi hành: </b></span><span class="pull-right">@tour.NgayKhoiHanh</span>
                                                        <div class="clearfix"></div>
                                                    </div>
                                                    <div style="padding:0 5px;">
                                                        <span class="pull-left"><b>Khởi hành tại:</b></span><span class="pull-right">@tour.NoiKhoiHanh</span>
                                                        <div class="clearfix"></div>
                                                    </div>
                                                    <div class="price">
                                                        <div class="pull-left">Giá: @String.Format("{0:0,0 VNĐ}", tour.Gia)</div>
                                                        <div class="pull-right"><a class="read-more" href="http://localhost:53953/Home/DetailTour?id=@tour.idTour">Chi tiết</a></div>
                                                        <div class="clearfix"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        }
                                    }
                                }

                            }
                        </div>
                    </div>
                    <div class="clearfix"></div>
                }
            }
        </div>
    </div>
</div>