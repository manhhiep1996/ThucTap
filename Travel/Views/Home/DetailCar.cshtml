@{
    ViewBag.Title = Model.TenND;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main">
    <div style="max-width:1100px;margin: 0 auto;">
        @Html.Action("LeftMenu")
        <div class="col-lg-9 col-md-9">
            <div itemscope="" itemtype="">
                <h1 itemprop="name" class="heading">@Model.TenND</h1>
                <div style="margin-bottom:15px;" class="description">Cảm ơn Qúy Khách đã lựa chọn dịch vụ của chúng tôi. Chúng tôi cam kết sẽ mang lại cho Qúy Khách một chuyến du lịch trọn vẹn nhất</div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <img src="@Model.Anh" style="width:370px;height:192px;" />
                    <div class="clearfix"></div>
                </div>
                <div class="book_info_tour col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    @Html.Raw(Model.NoiDung)
                </div>
            </div>
        </div>
    </div>
</div>