
@{
    ViewBag.Title = Model.TenTour;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main">
    <div style="max-width:1100px;margin: 0 auto;">
        @Html.Action("LeftMenu")
        <div class="col-lg-9 col-md-9">
            <div itemscope="" itemtype="">
                <h1 itemprop="name" class="heading">@Model.TenTour</h1>
                <!--End Box title-->
                <div class="main-box">
                    <div class="tourInfo">
                        <span style="color:#727272; font-size:12px;"><i class="fa fa-clock-o">  Số người đặt tour: @Model.LuotDatTour / @Model.SoNguoi</i></span>
                        <h2 itemprop="description" class="title">@Html.Raw(Model.TieuDe)</h2>
                        <div class="tour-img col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <a href=@Model.Anh class="fancybox" title=@Model.TenTour rel="group"><img src=@Model.Anh alt=@Model.TenTour width="100%"></a>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6">
                            <div class="g-r">Mã Tour: @Model.idTour</div>
                            <div class="g-r">Thời gian: @Model.ThoiGian </div>
                            <div class="g-r">Khởi hành từ:  @Model.NoiKhoiHanh</div>
                            <div class="g-r">Lịch trình: @Model.LichTrinh</div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6">
                            <div class="g-r">Hình thức: @Model.HinhThuc</div>
                            <div class="g-r">Phương tiện: @Model.PhuongTien</div>
                            <div class="g-r">Ngày khởi hành: @Model.NgayKhoiHanh</div>
                            @if (Model.KhuyenMai != 0)
                            {
                                <div class="g-r">Giá cũ: <span class="tour-price-cu">@String.Format("{0:0,0 VNĐ}", Model.Gia)</span></div>
                            }
                            
                            <div class="g-r" itemprop="offers" itemscope="" itemtype="">Giá tour: <span class="tour-price" itemprop="price" content="770000">@String.Format("{0:0,0 }", Model.GiaNL) </span><span itemprop="priceCurrency" content="VND">VNĐ</span></div>

                            <div class="g-row"><a class="btn_dattour" href="http://localhost:53953/Home/DatTour?id=@Model.idTour">Đặt tour</a></div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div style="padding-bottom: 5px;">
                        <h3 style="font-size: 17px; color: #CC0000; margin-top: 15px;text-transform: uppercase;margin-bottom: 10px;">Bảng giá Tour</h3>
                        <table class="tbl_price" cellpadding="0" cellspacing="0">
                            <tbody>
                                <tr>
                                    <td style="width: 25%; background: #EDEDED; border: 1px solid #DADADA; font-weight: bold;"> Số lượng </td>
                                    <td style="width: 25%; background: #EDEDED; border: 1px solid #DADADA; font-weight: bold;"> Người lớn </td>
                                    <td style="width: 25%; background: #EDEDED; border: 1px solid #DADADA; font-weight: bold;"> Trẻ em </td>
                                    <td style="width: 25%; background: #EDEDED; border: 1px solid #DADADA; font-weight: bold;"> Em bé </td>
                                </tr>
                                <tr>
                                    <td style="width: 25%; background: #EDEDED; border: 1px solid #DADADA; font-weight: bold;">&gt;= 1 khách</td>
                                    <td style="border: 1px solid #DADADA;">@String.Format("{0:0,0 VNĐ}", Model.GiaNL)</td>
                                    <td style="border: 1px solid #DADADA;">@String.Format("{0:0,0 VNĐ}", Model.GiaTE)</td>
                                    <td style="border: 1px solid #DADADA;">@String.Format("{0:0,0 VNĐ}", Model.GiaEB)</td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
                <div class="tab-box">
                    <ul id="listtab" class="listtab">
                        <li class="active" href="javascript:;" data_id="chuong_trinh">Giới thiệu Tour</li>
                        <li href="javascript:;" data_id="phu_luc">Lịch trình chi tiết</li>
                    </ul>
                    <div id="show-tabs">
                        <div class="tabcon" id="chuong_trinh" style="display:block">
                            @Html.Raw(Model.GioiThieuTour)
                            <p style="text-align:center">&nbsp;</p>
                        </div>
                        <div class="tabcon" id="phu_luc">
                            @Html.Raw(Model.LichTrinhCT)
                            <p style="text-align:center">&nbsp;</p>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>

