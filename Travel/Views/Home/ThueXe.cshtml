
<div class="main">
    <div style="max-width:1100px;margin: 0 auto;">
        @{ Html.RenderPartial("LeftMenu");}
        <div class="col-lg-9 col-md-9">
            <h2 class="heading">Thuê xe</h2>
            <div class="width100">
                @foreach (var item in Model.ListContentId)
                {
                    <div class="hotel-box">
                        <div style="" class="hotel-img col-lg-3 col-md-3 col-sm-3 col-xs-12"><a href="http://localhost:53953/Home/DetailContent?id=@item.idND&view=DetailCar"><img alt=@item.TenND src=@item.Anh width="100%"></a></div>
                        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                            <h3 style="font-size: 1.2em;font-weight: bold;margin-bottom: 5px;"><a href="http://localhost:53953/Home/DetailContent?id=@item.idND&view=DetailCar" title=@item.TenND>@item.TenND</a></h3>
                            <div style="text-align: justify;margin-bottom: 5px;">@Html.Raw(item.MoTa)</div>
                            <div style="color: #337ab7;font-weight: bold;">Giá: <span style="color:#c20509">@String.Format("{0:0,0 VNĐ}", item.Gia)</span></div>
                            <div><span style="color: #337ab7;font-weight: bold;">Nhãn hiệu:</span> @item.NhanHieu</div>
                            <div class="pull-right"><a href="http://localhost:53953/Home/DetailContent?id=@item.idND&view=DetailCar" style="color: #f06e00;">Chi tiết...</a></div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

