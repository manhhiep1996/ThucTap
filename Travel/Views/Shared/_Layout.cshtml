    <script src="~/Menuu/js/scripts.js"></script>
    <link href="~/Scripts/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Menuu/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Menuu/css/styles.css" rel="stylesheet" />
