</head>
<body>
    @Html.Action("MenuMobile")
    <div id="page">
        <script src='~/Menuu/js/home.js' type='text/javascript'></script>
        <section id="page_content" class="">
            <div id="pageContainer" class="clearfix">
                <div class="phone">
                    <div class="main">
                        <img src="~/Content/Picture/icon-hotline.png" />
                        0123456 - 7891011
                    </div>
                </div>
                <div class="main">
                    <div style="float: left; width: 100%; height: auto">
                        <div class="box-content">
                            <p style="max-width: 1100px;margin: 0 auto;">
                                <img alt="Travel banner" src="~/Content/Picture/bannertop.jpg" style="height:83px; width:1100px" />
                            </p>
                        </div>
                    </div>
                </div>
                <div class="width100">
                    <nav class="navbar-main navbar navbar-default cl-pri">
                        <div class="container nav-wrapper check_nav">
                            <div class="row">
                                <div class="navbar-header">
                                    <div class="mobile-menu-icon-wrapper">
                                        <div class="menu-logo">
                                            <h1 class="logo logo-mobile">
                                                <a href="index.html">
                                                    <img src="~/Menuu/image/logo.png" class="img-responsive logoimg" />
                                                </a>
                                            </h1>
                                            <div class="menu-btn click-menu-mobile ">
                                                <a href="#menu-mobile" class="navbar-toggler">
                                                    <span class="sr-only">Toggle navigation</span>
                                                    <span class="icon-bar"></span>
                                                    <span class="icon-bar"></span>
                                                    <span class="icon-bar"></span>
                                                </a>
                                            </div>
                                            <div id="cart-targets" class="cart">
                                                <a href="cart.html" class="cart " title="Giỏ hàng">
                                                    <span id="cart-count" class="cart-number">5</span>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="search-bar-top">
                                            <div class="search-input-top">
                                                <form action="#">
                                                    <input type="hidden" name="type" value="product" />
                                                    <input type="text" name="q" placeholder="Tìm kiếm sản phẩm ..." />
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div id="navbar" class="navbar-collapse collapse">
                                    <ul class="nav navbar-nav clearfix">
                                        @Html.Action("Menu")
                                    </ul>
                                </div>
                                <div class="hidden-xs pull-right right-menu">
                                    <ul class="nav navbar-nav pull-right">
                                        <li class="col-md-12">
                                            <div class="search-bar">
                                                @using (Html.BeginForm("MenuSearch", "Home", FormMethod.Post))
                                                {
                                                    @Html.ValidationSummary(true)
                                                    <input type="text" class="form-control" name="searchString" placeholder="Tìm kiếm..." />
                                                }
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
                <div class="width100">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                        </ol>

                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="~/Content/Picture/co-so-chinh-tuan-nguyen-travel-da-nang.jpg" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/Content/Picture/du-lich-da-nang-van-phong-tru-so-chinh.jpg" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/Content/Picture/mung-khai-truong-tuan-nguyen-travel-chi-nhanh-ha-noi11.jpg" alt="Third slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/Content/Picture/phong-ve-may-bay-truc-tuyen.jpg" alt="Third slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/Content/Picture/tuan-nguyen-travel-top-100-thuong-hieu-uy-tin-nam-2016.jpg" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                @RenderBody()
                <footer>
                    <div class="width100" style="background: #f5f5f5">
                        @Html.Action("MenuFooter")
                    </div>
                    <div class="width100">
                        <div class="width100">
                            <div class="module-content box-content">
                                <p>&nbsp;</p>
                                <p style="max-width:1100px;margin: 0 auto;"><img alt="TOUR-DA-NANG-UY-TIN" src="~/Content/Picture/ok hchuong.png" style="height:160px; width:1100px"></p>
                                <p>&nbsp;</p>

                            </div><!--box-content-->
                        </div><!--End Box Item-->
                    </div>
                    <div style="margin-bottom:15px;">
                        <div class="width100" style="background: #f5f5f5">
                            <div class="main">
                                @Html.Action("VanPhong")
                                <div class="col-lg-8 col-md-8" align="right">

                                </div>
                            </div>
                            <div style="text-align:justify">&nbsp;</div>
                            <div style="text-align:justify">&nbsp;</div>
                        </div>
                    </div>
                    <div class="width100" style="background:#f5f5f5; padding:10px 0;">
                        <div class="main" style="text-align:center">
                            <span>Copyright @@ 1992 - 2018 Tuấn Nguyễn Travel. All right reserved.</span>
                            <a href="#" title="">
                                <img src="~/Content/Picture/dmca_protected_sml_120n.png" alt="DMCA.com Protection Status" />
                            </a>
                        </div>
                    </div>
                    <div style="text-align:justify">&nbsp;</div>
                    <div style="text-align:justify">&nbsp;</div>
                    <div style="text-align:justify">&nbsp;</div>
                </footer>
                <div class="hotline-footer" style="display: block;">
                    <span class="hf-icon"><img src="~/Content/Picture/hotline-footer.png" style="background:no-repeat" /></span>
                    <div class="hf-text">
                        Hotline : <span>0972595693 - 0973023878</span>
                    </div>
                </div>
            </div>


            <a href="#" class="scrollToTop show">
                <i class="fa fa-chevron-up"></i>
            </a>
        </section>
    </div>
    <style>
        .dropdown:hover .dropdown-menu{
            display: block;
        }
        .navbar-default.navbar-main {
            background-color: #f06e00;
        }
        .navbar-main .navbar-nav > li > a {
            color: #ffffff;
        }
        #navbar .dropdown open, #navbar li:hover > a:first-child {
            color: #f06e00;
            background-color: #f5f4f2;
        }
        #navbar ul.dropdown-menu {
            background: #ffffff;
        }
        #navbar ul.dropdown-menu li a {
            color: #666;
        }
        #navbar ul.dropdown-menu li a {
            padding: 6px 15px 6px 16px;
            font-size: 14px;
        }
        #navbar ul.dropdown-menu {
            padding: 1px 0;
        }
    </style>
    <script>
        $(document).ready(function () {
            $("#owl992").owlCarousel({
                items: 4,
                autoplay: true,
                autoplayTimeout: 3000,
                autoplayHoverPause: true,
                autoHeight: true,
                smartSpeed: 1000,
                loop: true,
                nav: true,
                //navText: [" <img src='Content/Picture/prev.png'>", " <img src='Content/Picture/next.png'>"],
            });
            $("#owl768").owlCarousel({
                items: 2,
                autoplay: true,
                autoplayTimeout: 3000,
                autoplayHoverPause: true,
                autoHeight: true,
                loop: true,
                smartSpeed: 1000,
                nav: true,
            });
            $("#owl576").owlCarousel({
                items: 1,
                autoplay: true,
                autoplayTimeout: 3000,
                autoplayHoverPause: true,
                autoHeight: true,
                loop: true,
                smartSpeed: 1000,
                nav: true,
            });

        });
        $(document).ready(function () {
            $(".nav-item-list .open").click(function () {
                $(this).parent().find(".open").hide();
                $(this).parent().find(".exit").show();
                $(this).parent().find(".sub_cate_tour").slideDown();
            });

            $(".nav-item-list .exit").click(function () {
                $(this).parent().find(".exit").hide();
                $(this).parent().find(".open").show();
                $(this).parent().find(".sub_cate_tour").slideUp();
            });
        });
        $(".listtab li").click(function () {
            var data_id = $(this).attr('data_id');
            $(".listtab li").removeClass('active');
            $(this).addClass('active');
            $(".tabcon").hide();
            $("#" + data_id).show();
        });
        $('#vanphong').change(function () {
            if (this.checked) {
                var returnVal = confirm("Are you sure?");
                $(this).prop("checked", returnVal);
            }
            $('#textbox1').val(this.checked);
        });
        var app = angular.module('myApp', []);
        app.controller('myCtrl', function ($scope) {
            if ($scope.adults == null) {
                $scope.adults = 0;
            }
            if ($scope.children == null) {
                $scope.children = 0;
            }
            if ($scope.baby == null) {
                $scope.baby = 0;
            }
        });
    </script>
</body>
</html>
