
@{
    ViewBag.Title = "HÌNH ẢNH KHÁCH HÀNG";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@model PagedList.IPagedList<Travel.Models.DTO.MenuContentDTO>
@using PagedList.Mvc;
<h3>HÌNH ẢNH KHÁCH HÀNG</h3>
<div class="panel-body">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-2">
                <a type="button" class="btn btn-primary" href="/Admin/ThemNdMenu?view=ThemKhachHang">Thêm khách hàng mới</a>
            </div>
        </div>
    </div>
</div>
<table class="table">
    <tr>
        <th class="col-md-1"></th>
        <th class="col-md-1">
            @Html.DisplayName("Mã KH")
        </th>
        <th class="col-md-4">
            @Html.DisplayName("Tên khách hàng")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.TenMenu == "Khách hàng")
        {
            <tr>
                <td class="col-md-1">
                    <img src="@item.Anh" style="width:200px;height:150px;" />
                </td>
                <td class="col-md-1">
                    @Html.DisplayFor(modelItem => item.idND)
                </td>
                <td class="col-md-4">
                    @Html.DisplayFor(modelItem => item.TenND)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "SuaNdMenu", new { id = item.idND, view = "SuaKhachHang" })&nbsp;|&nbsp;@Html.ActionLink("Xóa", "DeleteContent", new { id = item.idND }, new { onclick = "return ConfirmationDialog()" })
                </td>
            </tr>
        }
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("QuanLiNdMenu", new { page, view = "QuanLiKhachHang", @searchString = @ViewBag.SearchString }))

<div style="text-align:justify">&nbsp;</div>

