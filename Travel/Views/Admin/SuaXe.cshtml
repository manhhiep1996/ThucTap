@model Travel.Models.Entities.NDMenu

@{
    ViewBag.Title = "Sửa thông tin thuê xe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa thông tin xe</h2>

@using (Html.BeginForm("EditContent", "Admin"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Sửa thông tin</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.idND)
    <div class="form-group">
        <div class="col-md-2">
            @Html.Label("Tên xe")
        </div>
        <div class="col-md-5">
            @Html.EditorFor(model => model.TenND, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenND, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.Label("Giá")
        </div>
        <div class="col-md-5">
            @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.Label("Nhãn hiệu")
        </div>
        <div class="col-md-5">
            @Html.EditorFor(model => model.NhanHieu, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NhanHieu, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.Label("Mô tả")
        </div>
        <div class="col-md-8">
            @Html.TextAreaFor(model => model.MoTa, new { @id = "ckeMT" })
            <script type="text/javascript">
                CKEDITOR.replace("ckeMT");
            </script>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.Label("Nội dung")
        </div>
        <div class="col-md-8">
            @Html.TextAreaFor(model => model.NoiDung, new { @id = "ckeND" })
            <script type="text/javascript">
                CKEDITOR.replace("ckeND");
            </script>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.Label("Menu")
        </div>
        <div class="col-md-5">
            @Html.DropDownListFor(model => model.idMenu, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idMenu, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.Label("Ảnh")
        </div>
        <div class="col-md-5">
            @Html.EditorFor(model => model.Anh, new { htmlAttributes = new { @type = "file", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Anh, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu thông tin" class="btn btn-default" onclick="return confirmEdit()" />
        </div>
    </div>
</div>
}

<div>
    <a href="#" onclick="back()">Quay lại trang trước</a>
</div>
<div style="text-align:justify">&nbsp;</div>