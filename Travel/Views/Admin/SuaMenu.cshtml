@model Travel.Models.Entities.Menu

@{
    ViewBag.Title = "Sửa thông tin menu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa thông tin menu</h2>

@using (Html.BeginForm("EditMenu", "Admin"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Sửa thông tin</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.idMenu)
    <div class="form-group">
        <div class="col-md-2">
            @Html.Label("Tên Menu")
        </div>
        <div class="col-md-5">
            @Html.EditorFor(model => model.TenMenu, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenMenu, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">
            @Html.Label("Nội dung")
        </div>
        <div class="col-md-8">
            @Html.TextAreaFor(model => model.NoiDung, new { @id = "ckeND" })
            <script type="text/javascript">
                CKEDITOR.replace("ckeND");
            </script>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.Label("Menu cha")
        </div>
        <div class="col-md-5">
            @Html.DropDownListFor(model => model.idMenuCha, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idMenuCha, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.Label("Loại view")
        </div>
        <div class="col-md-5">
            @Html.EditorFor(model => model.TenView, new { htmlAttributes = new { @type = "file", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenView, "", new { @class = "text-danger" })
        </div>
    </div>
    <div style="text-align:justify">&nbsp;</div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu thông tin" class="btn btn-default" onclick="return confirmEdit()" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay lại", "QuanLiMenu")
</div>
<div style="text-align:justify">&nbsp;</div>