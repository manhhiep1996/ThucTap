@model Travel.Models.Entities.TaiKhoanNH

@{
    ViewBag.Title = "Sửa tài khoản ngân hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa thông tin tài khoản</h2>

@using (Html.BeginForm("EditBankAccount", "Admin"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Sửa thông tin</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaTK)
        <div class="form-group">
            <div class="col-md-2">
                @Html.Label("Mã TK")
            </div>
            <div class="col-md-5">
                @Html.EditorFor(model => model.MaTK, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaTK, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.Label("Tên TK")
            </div>
            <div class="col-md-5">
                @Html.EditorFor(model => model.TenTK, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTK, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.Label("Tên ngân hàng")
            </div>
            <div class="col-md-5">
                @Html.EditorFor(model => model.TenNganHang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNganHang, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu thông tin" class="btn btn-default" onclick="return confirmEdit()" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "TaiKhoanNganHang")
</div>
<div style="text-align:justify">&nbsp;</div>